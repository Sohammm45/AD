        <RadioButton
            android:id="@+id/maleRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male" />
        <RadioButton
            android:id="@+id/femaleRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female" />
    </RadioGroup>

    <!-- CheckBoxes for Classes -->
    <CheckBox
        android:id="@+id/firstClassCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Class" />
    <CheckBox
        android:id="@+id/secondClassCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Second Class" />
    <CheckBox
        android:id="@+id/sleeperClassCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sleeper Class" />

    <!-- Spinner for Destination -->
    <Spinner
        android:id="@+id/destinationSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/submitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit" />
</LinearLayout>
<!-- AndroidManifest.xml -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.trainticketbooking">

    <application
        android:allowBackup="true"
        android:label="TrainTicketBooking"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
